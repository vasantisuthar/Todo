<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href = "/css/styles.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous"> -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
     <!-- Compiled and minified CSS -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
     <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
     <title>To-do List</title>
</head>
<body>
    <nav>
        <div class="nav-wrapper container">
          <a href="/">To-do List</a>
          <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
          <ul class="right hide-on-med-and-down">
            <button class=" btn-small btn-large add-btn sidenav-trigger" data-target="mobile-demo">List</button>
            </ul>
        </div>
      </nav>

      <div class="sidenav"  id="mobile-demo">
            <h3 class="listHeader">Lists</h3>
            <!-- add list -->
            <form class="item" action="/list" method="post">
              <input type="text" name="newList" placeholder="Create List" required autocomplete="off">
              <button type="submit" name="list" class="btn btn-primary">Add</button>
            </form>
            <div class="list-group">
                  <a href="/" class="list-item-group" aria-current="true">
                    Today
                  </a>

                <!-- show lists -->
                <%lists.forEach((list) => {%>
                  <form action="/deleteList" method="post">
                    <a href="/<%=list.newList%>" class="list-item-group text-capitalize"><%=list.newList.charAt(0).toUpperCase() + list.newList.slice(1)%> 
                    <input type="hidden" name="deletedList" value="<%= list._id %>">
                    <button type="submit" class="delBtn"><i class="material-icons">delete</i></button>
                    </a>
                  </form>
                <%});%> 
              </div>
            </div>
        <div class="listItems">
          <!-- list title -->
            <h3><%=listTitle.charAt(0).toUpperCase() + listTitle.slice(1)%></h3>
            <!-- add item -->
            <form class="list" action="/" method="post">
                <input type="text" name="newItem" placeholder="New item" required autocomplete="off">
                <button type="submit" name="item" value="<%=listTitle%>" class="btn btn-primary">Add</button>
            </form>
            <!-- display items -->
          <% items.forEach((item) => { %>
                    <form action="/delete" method="post">
                        <div class="todo">
                        <input type="checkbox" name="checkbox" value ="<%=item._id%>" onChange="this.form.submit()">
                        <p><%=item.item%></p>
                    </div>
                    <input type="hidden" name="listName" value ="<%= listTitle %>"></input>
                    </form>
          <% })%>
        </div>
    
    <script src="/js/ui.js"></script>
    <script src="/js/app.js"></script>

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>
</html>